---
layout: base.njk
---
<article class="blog-post">
  <header class="post-header">
    <h1 class="post-title">{{ title }}</h1>
    {% if date %}
    <time class="post-date">{{ date | date: "%B %d, %Y" }}</time>
    {% endif %}
  </header>
  <div class="post-content">
    {{ content | safe }}
  </div>
  <footer class="post-footer">
    <a href="/blog/">&larr; Back to Blog</a>
  </footer>
</article>
